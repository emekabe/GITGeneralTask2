<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".Crypto">



        <EditText
            android:id="@+id/plainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter message here"/>

        <EditText
            android:id="@+id/lockKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="key"
            android:inputType="numberSigned"
            android:layout_marginBottom="30dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Encrypt"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:onClick="encryptPlainText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/encryptedText"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:text="Encrypted Message: " />



        <EditText
            android:id="@+id/unlockKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="key"
            android:layout_marginBottom="30dp"
            android:inputType="numberPassword"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Decrypt"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:onClick="decryptCipherText"/>

        <TextView
            android:id="@+id/decryptedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textAlignment="center"
            android:text="Decrypted text"
            android:layout_marginTop="10dp"
            android:textColor="#000000"/>


</LinearLayout>

















